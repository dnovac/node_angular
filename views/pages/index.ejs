<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ../partials/header %>
    <script src="/javascripts/home.js"></script>
</head>

<body>
<div class="container col-md-12" id="containerApp" ng-app="homeModule">
    <!-- Home Controller -->
    <div ng-controller="HomeController" ng-init="getMovies();">

        <div class="text-center">
            <div class="welcome-message text-center">
                <h2><b>LIST</b> {{username | uppercase}}</h2>
            </div>
        </div>

        <div class="row">
            <label>List Title: </label>
            <input type="text" ng-model="username" placeholder="Enter a name here">
        </div>

        <br/>

        <div ng-repeat="movie in movies">
            <div class="col-md-4">
                <div class="box">
                    <div class="box-content">
                        <h4 class="text-center">{{movie.Title | uppercase}}</h4>
                        <hr/>
                        <img align="middle" width="300" height="400" ng-src={{movie.Poster}} alt={{movie.Title}}></img>
                        <p class="text-center"><b>{{movie.Genre}}</b></p>
                        <br/>
                        <p class="text-center"><i>{{movie.imdbID}}</i></p>
                        <br/>
                        <a href="#" class="btn btn-block btn-primary">See more</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- static data -->
        <div class="col-md-4">
                <div ng-repeat="product in products">
                    <div ng-show="product.isAvailable">
                        <label>Name: </label>
                        <p>{{product.name | uppercase}} </p>

                        <label>Price: </label>
                        <p>{{product.price}}</p>

                        <label>Description</label>
                        <p>{{product.description}}</p>
                    </div>
                </div>
        </div>

    </div> <!-- HomeController -->

    <!-- footer -->
    <!--<% include ../partials/footer %>-->
</div>

<!-- scripts -->
<% include ../partials/scripts %>
</body>
</html>
